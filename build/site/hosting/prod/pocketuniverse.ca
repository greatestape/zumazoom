<VirtualHost *>
  ServerName  pocketuniverse.ca
  ServerAlias www.pocketuniverse.ca
  ServerAdmin sam@pocketuniverse.ca
  
  DocumentRoot /home/sam/projects/pocketuniverse/build/site

  Alias /media/ /home/sam/projects/pocketuniverse/build/site/pocketuniverse/media/

  <Directory /var/www/media>
    Order deny,allow
    Allow from all
  </Directory>

  Alias /munin/ /var/www/munin/

  <Directory /var/www/munin>
    Order deny,allow
    Allow from all
  </Directory>

  WSGIScriptAlias / "/home/sam/projects/pocketuniverse/build/site/hosting/prod/pocketuniverse.wsgi"

  LogFormat "%h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\" %D" combined

  ErrorLog "|/usr/bin/cronolog /home/sam/projects/pocketuniverse/build/site/hosting/prod/log/%Y/error_%Y%m%d.log --symlink=/home/sam/projects/pocketuniverse/build/site/hosting/prod/log/error.log"

  LogLevel warn

  CustomLog  "|/usr/bin/cronolog --symlink=/home/sam/projects/pocketuniverse/build/site/hosting/prod/log/current.log -P /home/sam/projects/pocketuniverse/build/site/hosting/prod/log/previous.log /home/sam/projects/pocketuniverse/build/site/hosting/prod/log/%Y/access_%Y%m%d.log " combined

</VirtualHost>
